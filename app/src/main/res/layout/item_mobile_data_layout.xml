<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/padding_normal"
    android:orientation="vertical"
    app:cardCornerRadius="@dimen/padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/padding_normal">

            <TextView
                android:id="@+id/tv_label_quarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/quarter"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_value_quarter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal" />

            <TextView
                android:id="@+id/tv_label_vlofmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/volume_of_mobile_data"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_value_vlofmobile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_normal" />
        </LinearLayout>

        <ImageView
            android:id="@+id/img_image_decrease"
            android:layout_width="@dimen/padding_large"
            android:layout_gravity="center"
            android:layout_height="@dimen/padding_large"
            android:contentDescription="@string/decrease_vl_data"
            android:src="@drawable/ic_trending_down_black_24dp" />
    </LinearLayout>

</androidx.cardview.widget.CardView>